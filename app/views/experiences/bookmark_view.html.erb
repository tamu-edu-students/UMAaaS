<div id="page-header"><%="Bookmarks for " + @user.name%></div>
<div class="bookmarks-list">
    <% if @experiences.size == 0 then %><div class="bookmarks-none">No Bookmarks added !</div>
    <% else %>
        <ul>
        <% @experiences.each_with_index do |experience, index| %>
        <li><%=link_to experience.title, exeprience_view_path(experience)%></li>
        <% end %>      
        </ul>
    <% end %>
</div>