<div onclick="window.location.href = '/p/<%= @program.id %>';">
  <div id="page-header" style="background-image: url('<%= @program.banner.attached? ? url_for(@program.banner) : asset_path('header-background.jpg') %>');">
    <%= @program.name %>
  </div>
</div>

<div class="flex-header">
 <div class="header_column_1_of_1" class="flex-item">
  <div class="header-return-link">&#x21D0;<%= link_to 'Return', url_for(:back)%></div>
 </div>
</div>
<div id="flex-container">
 <div id="column_2_of_2" class="flex-item">
     <div class="portal-column-title">Experiences 
      <div style="display: flex; gap: 8px; align-items: center">
						<div  class="portal-experience-flag">
       	<div class="<%= if current_user.id || 1==1 then "experience-flagged-yes" else "experience-flagged-yes-nologin" end %>
           	<%= if @experience.hasUserFlagged == 1 then "flagged" end %>" id="experience-flagged-<%= @experience.id %>">
           	<%= @experience.flagCount %>
       	</div>
    	</div>
     <%= if current_user.id == @experience.user_id then link_to 'Edit', edit_experience_path; end %>
    	</div>
         <div class="portal-column-title-sort">&nbsp;</div>
     </div>
 	<div class="portal-experience-outer-wrapper" id="portal-experience-wrapper-<%= @experience.id %>"><%= render 'experiences/view' , locals: {experience: @experience, single: true} %></div>
</div>
<%if not logged_in? %><div class="arrow-box">Sign in to share your tips and experiences!</div><% end %>