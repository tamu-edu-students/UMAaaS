<div id="portal-header">Edit Study Abroad Program</div>
<div id="flex-container">
 <div id="column1" class="flex-item"><table class="program-admin">
     <thead>
         <tr>
             <td>Admin Functions</td>
         </tr>
     </thead>
     <tbody>
         <tr>
             <td><%= if @program.disabled then
                    link_to 'Enable Program', :controller => :programs, :action => :enable
                else
                    link_to 'Disable Program', :controller => :programs, :action => :disable
                end%></td>
         </tr>
     </tbody>
 </table></div>
 <div id="column2" class="flex-item"><%= form_tag program_path(@program), :method => :put do %>
    <table class="program-edit-table">
        <tbody>
            <tr>
                <td class="program-edit-label"><%= label :program, :name, 'Program Name' %></td>
                <td><%= text_field :program, :name %></td>
            </tr>
            <tr>
                <td class="program-edit-label"><%= label :program, :location, 'Location (city, country)' %></td>
                <td><%= text_field :program, :location %></td>
            </tr>
            <tr>
                <td class="program-edit-label"><%= label :program, :region, 'Region' %></td>
                <td><%= text_field :program, :region %></td>
            </tr>
            <tr>
                <td colspan="2" class="program-edit-submit"><%= submit_tag 'Save' %></td>
            </tr>
        </tbody>
    </table>
 <% end %></div>
</div>